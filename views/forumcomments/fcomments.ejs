
<h2>Please, vote and add comments<br>
for Title:  <%=  topicInfos.title %></h2>

<form action="/forumcomments" method="post">
	<input type="hidden" name="topicId" value="<%= topicInfos._id %>">

	<label> Add Vote</label>
	<input type="radio" name="vote" value="1"> Good
	<input type="radio" name="vote" value="0"> bad<br>


	<label>Add comments</label>
	<input type="text" 
				name="comment"
				placeholder="<%= topicInfos.title %>">

	<input type="submit" value="comment">
</form>

<%= topicInfos %>
